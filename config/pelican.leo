# 6 條白色長方形
# 每條高度 height/13
ctx.fillStyle ='#FFFFFF'
white_height = int(height/13)
whitex = 0
whitey = white_height
white_width = width
for i in range(6):
    ctx.fillRect(whitex, whitey+i*2*white_height, white_width, white_height)

# 藍色區域
