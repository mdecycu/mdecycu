def do_game():
    global counter
    if game.figure is None:
        game.new_figure()
    counter += 1
    if counter &gt; 100000:
        counter = 0
    if counter % (fps // game.level // 2) == 0 or pressing_down:
        if game.state == "start":
            game.go_down()
